<!DOCTYPE html>
<html>
<head>
  <title>Photogur</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= link_to("New Picture", "/pictures/new") %>

  <p><%= link_to 'New User', new_users_path %></p>
  <p><%= link_to 'Login', new_sessions_path %></p>



  <% if current_user %>
  <p> <%= link_to 'Logout', sessions_path, method: :delete %> </p>
  <p>Hello <%= current_user.email %></p>
  <% else %>
  </p> Please log in to see pictures </p>
  <% end %>


  <% if flash[:notice]  || flash[:alert] %>
  <%= flash[:notice] %>
  <%= flash[:alert] %>
  <% end %>


<%= yield %>

</body>
</html>
